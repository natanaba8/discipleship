<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/speshal"
    tools:context="com.book.discipleship.Content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="248dp"
                android:layout_height="284dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="189dp"
                    android:layout_height="41dp"
                    android:text="1 .	ደቀመዛሙርት ማፍራት"
                    android:textColor="#fffaf0e6"
                    android:textSize="15dp"
                    android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="189dp"
            android:layout_height="43dp"
            android:text="2.	ደቀመዝሙር መሆን"
            android:textColor="#fffaf0e6"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="189dp"
            android:layout_height="40dp"
            android:text="3.	የጥሞና ጊዜ"
            android:textColor="#fffaf0e6"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="189dp"
            android:layout_height="41dp"
            android:text="4.	የመጽሐፍ ቅዱስ ጥናት"
            android:textColor="#fffaf0e6"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:textColor="#fffaf0e6"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="5.	ጸሎት"
            android:textSize="15dp"
            android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

        

    </LinearLayout>

    

</RelativeLayout>
